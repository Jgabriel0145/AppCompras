<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCompras.Views.Formulario">
    <ContentPage.Content>
        <StackLayout Padding="10">
            
            <Label Text="Adicionar Produto" FontSize="Title" 
                   HorizontalOptions="Center" TextColor="Black"/>

            <Label Text="Produto:" FontSize="Medium" TextColor="Black"/>
            <Entry ClearButtonVisibility="WhileEditing"/>

            <Label Text="Quantidade:" FontSize="Medium" TextColor="Black"/>
            <Entry Keyboard="Numeric"/>

            <Label Text="Valor Unitário:" FontSize="Medium" TextColor="Black"/>
            <Entry Keyboard="Numeric"/>

            <Button />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>